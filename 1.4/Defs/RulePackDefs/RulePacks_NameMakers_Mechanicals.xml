<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- This Rulepackdef is what finds the txt files to be used in the later rulepacks -->
    <RulePackDef>
        <defName>BF_NameRules</defName>
        <rulePack>
            <rulesFiles>
                <li>BF_Male->BF_Names/AndroidMaleNames</li>
                <li>BF_Female->BF_Names/AndroidFemaleNames</li>
                <li>BF_None->BF_Names/AndroidNoneNames</li>
                <li>BF_Drone->BF_Names/DroneNoneNames</li>
                <li>BF_IDs->BF_Names/BF_IDs</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

    <!-- This is the item that goes into the racedef's namegenerator
        Example - <nameGenerator>BF_AndroidMaleNames</nameGenerator> -->
    <RulePackDef>
        <defName>BF_AndroidMaleNames</defName>
        <include>
            <li>BF_NameRules</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_name(p=12)->[BF_Male] [BF_IDs]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>BF_AndroidFemaleNames</defName>
        <include>
            <li>BF_NameRules</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_name(p=12)->[BF_Female] [BF_IDs]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>BF_AndroidNoneNames</defName>
        <include>
            <li>BF_NameRules</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_name(p=12)->[BF_None] [BF_IDs]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>BF_DroneNoneNames</defName>
        <include>
            <li>BF_NameRules</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_name(p=12)->[BF_Drone] [BF_IDs]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

</Defs>