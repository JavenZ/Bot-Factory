<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base Class for all mechanical surgeries that applies to appropriate mechanicals -->
    <RecipeDef Name="BF_surgeryMechanical" Abstract="True">
        <effectWorking>Repair</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workSpeedStat>BF_MechanicalOperationSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <workSkillLearnFactor>16</workSkillLearnFactor>
        <anesthetize>false</anesthetize>
		<recipeUsers>
			<li>BF_Tier1Android</li>
			<li>BF_Tier2Android</li>
			<li>BF_Tier3Android</li>
			<li>BF_Tier4Android</li>
            <li>BF_DroneChemUnit</li>
            <li>BF_DroneMineralUnit</li>
            <li>BF_DroneNutritionUnit</li>
            <li>BF_DroneTORT</li>
            <li>BF_DroneWatchdog</li>
		</recipeUsers>
    </RecipeDef>

	<!-- Surgery to shutdown any incapacitated mechanical unit -->
    <RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_ShutdownMechanical</defName>
		<label>Shut down central core</label>
		<description>Shuts down a mechanical unit by disconnecting core hardware. This does not permanently destroy the unit's memory.</description>
		<workerClass>Recipe_ExecuteByCut</workerClass>
		<jobString>Shutting down mechanical unit.</jobString>
		<workAmount>800</workAmount>
		<surgerySuccessChanceFactor>5</surgerySuccessChanceFactor>
		<hideBodyPartNames>true</hideBodyPartNames>
        <isViolation>true</isViolation>
		<targetsBodyPart>false</targetsBodyPart>
	</RecipeDef>

	<!-- Surgery to remove body parts from mechanical units -->
	<RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_RemoveBodyPartAndroid</defName>
		<label>Remove part</label>
		<description>Removes body part.</description>
		<workerClass>BotFactory.Recipe_RemoveMechanicalPart</workerClass>
		<jobString>Removing body part.</jobString>
		<workAmount>2000</workAmount>
    	<isViolation>true</isViolation>
		<surgerySuccessChanceFactor>2.5</surgerySuccessChanceFactor>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BF_PartPack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>BF_PartPack</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

	<!-- Surgery to restore body parts in mechanical units -->
	<RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_RestoreBodyPartAndroid</defName>
		<label>Restore part</label>
		<description>Restores a particular body part.</description>
		<workerClass>BotFactory.Recipe_RestoreMechanicalPart</workerClass>
		<jobString>Restoring body part.</jobString>
		<workAmount>1400</workAmount>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
	  	<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BF_PartPack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
    	</ingredients>
    	<fixedIngredientFilter>
			<thingDefs>
				<li>BF_PartPack</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

	<!-- Surgery to repaint mechanical units -->
	<RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_RepaintMechanical</defName>
		<label>Repaint</label>
		<description>Changes the paint color of a mechanical unit.</description>
		<workerClass>BotFactory.Recipe_PaintMechanicalUnit</workerClass>
		<jobString>Painting mechanical unit.</jobString>
		<workAmount>400</workAmount>
	  	<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
    	</ingredients>
    	<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

	<!-- Surgery to increase the maintenance level of a unit to a certain extent. -->
	<RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_DoEmergencyMaintenance</defName>
		<label>Do makeshift maintenance</label>
		<description>Use parts to repair severe maintenance flaws. Since maintenance is primarily an internal activity, this can only bring it to 40%.</description>
		<workerClass>BotFactory.Recipe_DoEmergencyMaintenance</workerClass>
		<jobString>Restoring body part.</jobString>
		<workAmount>800</workAmount>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
	  	<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BF_PartPack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
    	</ingredients>
    	<fixedIngredientFilter>
			<thingDefs>
				<li>BF_PartPack</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

	<!-- Surgery to reprogram drones to serve the colony -->
    <RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_ReprogramDrone</defName>
		<label>reprogram drone</label>
		<description>A straightforward but delicate operation, reprogramming drones to suit the colony's purposes is an excellent way to strengthen capabilities. However, the previous owners may have installed safeguards against such operations, so there is a high risk of death should it fail.</description>
		<workerClass>BotFactory.Recipe_ReprogramDrone</workerClass>
		<jobString>Reprogramming drone.</jobString>
		<workAmount>5000</workAmount>
		<skillRequirements>
            <Crafting>8</Crafting>
            <Intellectual>6</Intellectual>
        </skillRequirements>
		<surgerySuccessChanceFactor>0.8</surgerySuccessChanceFactor>
		<deathOnFailedSurgeryChance>0.4</deathOnFailedSurgeryChance>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<researchPrerequisite>BF_T1Androids</researchPrerequisite>
		<addsHediff>BF_LongReboot</addsHediff>
	</RecipeDef>

	<!-- Reboot, akin to anesthetic but requiring no medicine -->
    <RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_RebootUnit</defName>
		<label>Reboot unit</label>
		<description>An exceedingly straightforward operation to restart the unit, without any side effects or consequences.</description>
		<workerClass>Recipe_AddHediff</workerClass>
		<jobString>Rebooting unit.</jobString>
		<workAmount>5000</workAmount>
		<skillRequirements>
            <Crafting>4</Crafting>
            <Intellectual>2</Intellectual>
        </skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<surgerySuccessChanceFactor>4</surgerySuccessChanceFactor>
		<researchPrerequisite>BF_MechanicalInsight</researchPrerequisite>
		<addsHediff>BF_LongReboot</addsHediff>
	</RecipeDef>

	<!-- Overclocking -->
    <RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_ApplyOverclocking</defName>
		<label>Apply overclocking</label>
		<description>A simple hardware restructuring to a mechanical unit to lower hardware safety measures to allow for greater performance and risks.</description>
		<workerClass>Recipe_AddHediff</workerClass>
        <jobString>Applying overclocking.</jobString>
		<workAmount>5000</workAmount>
		<skillRequirements>
            <Crafting>4</Crafting>
            <Intellectual>2</Intellectual>
        </skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<surgerySuccessChanceFactor>4</surgerySuccessChanceFactor>
		<researchPrerequisite>BF_MechanicalInsight</researchPrerequisite>
		<addsHediff>BF_MechanicalOverclocking</addsHediff>
	</RecipeDef>

    <RecipeDef ParentName="BF_surgeryMechanical">
		<defName>BF_ResetOverclocking</defName>
		<label>Resetting overclocking</label>
		<description>A simple hardware restructuring to a mechanical unit to reset hardware safety measures to standard settings.</description>
        <workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>Resetting overclocking.</jobString>
		<workAmount>5000</workAmount>
		<skillRequirements>
            <Crafting>4</Crafting>
            <Intellectual>2</Intellectual>
        </skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<surgerySuccessChanceFactor>4</surgerySuccessChanceFactor>
		<researchPrerequisite>BF_MechanicalInsight</researchPrerequisite>
        <removesHediff>BF_MechanicalOverclocking</removesHediff>
	</RecipeDef>

</Defs>