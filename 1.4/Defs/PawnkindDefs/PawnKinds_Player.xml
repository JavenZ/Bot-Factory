        <combatPower>40</combatPower>
	</PawnKindDef>

	<PawnKindDef ParentName="BF_BaseNewbootPlayerPawnKind">
		<defName>BF_T3Colonist</defName>
		<label>T3 Newboot Colonist</label>
		<race>BF_Tier3Android</race>
        <combatPower>60</combatPower>
	</PawnKindDef>

	<PawnKindDef ParentName="BF_BaseNewbootPlayerPawnKind">
		<defName>BF_T4Colonist</defName>
		<label>T4 Newboot Colonist</label>
		<race>BF_Tier4Android</race>
        <combatPower>75</combatPower>
	</PawnKindDef>

	<!--Androids With Real Backstories-->

    <PawnKindDef Name="BF_BaseMechPlayerPawnKind" ParentName="BasePlayerPawnKind" Abstract="True">
        <label>Android colonist</label>
		<minGenerationAge>20</minGenerationAge>
		<defaultFactionType>BF_PlayerAndroidFaction</defaultFactionType>
		<chemicalAddictionChance>0.00</chemicalAddictionChance>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
        <initialResistanceRange>13~21</initialResistanceRange>
		<backstoryFiltersOverride>
		  <li>
			<categories>
			  <li>BF_GeneralAndroids</li>
			</categories>
		  </li>
		</backstoryFiltersOverride>
        <apparelTags>
            <li>IndustrialBasic</li>
        </apparelTags>
    </PawnKindDef>

	<PawnKindDef ParentName="BF_BaseMechPlayerPawnKind">
